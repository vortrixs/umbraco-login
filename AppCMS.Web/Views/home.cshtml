@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "master.cshtml";
    var backgroundImage = Model.HeroBackgroundImage != null ? Model.HeroBackgroundImage.Url : String.Empty;
}
<section class="section section--full-height background-image-full"
         style="background-image: url('@backgroundImage')">
    <div class="section__hero-content section--content-left">
        <h1 class="section--hero-header">@Model.HeroHeader</h1>
        <p class="section__description">@Model.HeroDescription</p>
    </div>
</section>

<section class="section">
    <hgroup class="product-headers">
        <h2>We offer</h2>
        <h3>The following packages</h3>
    </hgroup>
    <div class="section--products-container">
        @if (Model.FeaturedProducts != null)
        {
            foreach (Product product in Model.FeaturedProducts)
            {
                <div class="product-box" style="background-image: url(@Model.ProductBoxBackground.Url)">
                    <h3 class="product-box-headline">@product.ProductName</h3>
                    <ul class="product-advantages product-box-features">
                        @if (@product.Features != null)
                        {
                            foreach (Feature feature in @product.Features)
                            {
                                <li class="product-box-feature-item">@feature.GetProperty("featureName").Value()</li>
                            }
                        }
                    </ul>
                    
                    <div class="product-box-price" style="background-image: url(@Model.ProductBoxPrice.Url)">
                        @product.Price.ToString("N0")DKK <span style="color: #9b689e">/måned</span>
                        <span class="product-box-price-ex">Ekskl. moms</span>
                    </div>
                </div>
            }
        }
    </div>

</section>


<section class="section">

    <div class="container">
        <div class="row">

            <div class="ta-center">
                <p class="section__description mw-640 ma-h-auto">@Model.FooterDescription</p>

                <a class="button button--border--light_solid" href="@Model.FooterCtalink.Url">
                    @Model.FooterCtacaption
                </a>

            </div>

        </div>
    </div>

</section>