@inherits Umbraco.Web.Mvc.UmbracoViewPage<AppCMS.Web.Models.SignupModel>
@using Umbraco.Web

@if(!Umbraco.MemberIsLoggedOn())
{
    using (Html.BeginUmbracoForm("SubmitSignup", "Member", System.Web.Mvc.FormMethod.Post, new { id="signup" }))
    {           
        @Html.AntiForgeryToken()

        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { placeholder = "Name" })
        
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })

        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
        
        @Html.LabelFor(m => m.PasswordRepeat)
        @Html.PasswordFor(m => m.PasswordRepeat, new { placeholder = "PasswordRepeat" })

        @Html.ValidationSummary()
        <button name="signup" type="submit">Sign up</button>
    }
}
else
{
    Response.Redirect("/sign-in");
}